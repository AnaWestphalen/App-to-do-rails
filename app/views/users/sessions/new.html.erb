<div class="container" style="min-height: 85vh;">
  <div style="align:center; mt-20">
    <div class="corpo-login" style="max-height: 60vh;">
      <div class="escopo col-md-10 col-sm-10 col-xs-12 form-inputs mb-2 radius-15">
        <div style="align-intens: center;">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div >
              <%= f.button :submit, "Log in", class: "btn btn-dark btn-sm"%>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
